row1 = ["⬜️", "️⬜️", "️⬜️"]
row2 = ["⬜️", "⬜️", "️⬜️"]
row3 = ["⬜️️", "⬜️️", "⬜️"]
map = [row1, row2, row3]
print(f"{row1}\n{row2}\n{row3}")
position = input("Where do you want to put the treasure? ")
Horizental = int(position[0])
Vertical = int(position[1])
# selected_row = map[Horizental - 1]
# selected_row[Vertical - 1] = "***"
# Or can use this way to solve :
map[Horizental - 1][Vertical - 1] = "***"
print(f"{row1}\n{row2}\n{row3}")
